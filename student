



#include<stdio.h>
#include<stdlib.h>
struct student
{char name[20];
 int num;
 float mark;
};

void main()
{
    printf("program to store student details and display\n");
    int input,total;
    printf("enter the total strength\n");
    scanf("%d",&total);
     struct student info[total];
    for(int i=0;i<total;i++){  
    printf("enter the roll number\n");
    scanf("%d",&info[i].num);
     printf("enter the name \n");
    scanf("%20s",info[i].name);
    printf("enter the mark");
    scanf("%f",&info[i].mark);
    }
    printf("enter the number for details\n");
    scanf("%d",&input);
    int p=0;
    for(int i=0;i<total;i++)
    {
    if(input==info[i].num)
    {
        puts(info[i].name);
        printf("\n%d",info[i].num);
        printf("\n%f",info[i].mark);
        p=1;
    }
    }
    
    if(p==0)
    printf("invalid\n");
}
